{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    // todo: switch to ts
    "react/prop-types": "off",
    // allow ' and "
    "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
    "no-unused-vars": ["warn"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
